.SUFFIXES:
.SUFFIXES: .cpp .o

CXX = g++
CXXFLAGS = -std=c++11 -Wall -g -O2
RM = rm -f
INCLUDES = -I../src
LIBS = ../src/libRVO.a
PROGRAMS = Blocks Circle Roadmap

all: $(PROGRAMS)

Crossing: Crossing.o
	$(RM) Crossing
	$(CXX) $(INCLUDES) $(CXXFLAGS) -o $@ Crossing.o $(LIBS)

.cpp.o:
	$(CXX) $(INCLUDES) $(CXXFLAGS) -c -o $@ $<

clean:
	$(RM) $(PROGRAMS)
	$(RM) *.o

.PHONY: all clean

.NOEXPORT:
